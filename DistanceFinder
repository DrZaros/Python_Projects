#Shane Elder
#Measures distances between points and finds the shortest from an origin
import math

print('This program finds the closest point to a user-input origin.','\n')

origin_x = float(input('What is the x-coordinate of the origin point? '))
origin_y = float(input('What is the y-coordinate of the origin point? '))
print('\n')

x_coordinates = []
y_coordinates = []
distances_list = []

point_number = int(input('How many points would you like to input for comparison? '))

for i in range(0, point_number):
    point_x = float(input("Put your point's x coordinate here: "))
    point_y = float(input("Put your point's y coordinate here: "))
    print('\n')

    x_coordinates.append(point_x)
    y_coordinates.append(point_y)


for i in range(0, point_number):
    y = (x_coordinates[i] - origin_x)**2
    z = (y_coordinates[i] - origin_y)**2
    q = abs(math.sqrt(y + z))
    distances_list.append(q)

x = distances_list[0]
index = 0

for i in range(1,point_number):

    if distances_list[i] < x:
        x = distances_list[i]
        index = i

print('The closest point is', x_coordinates[index], y_coordinates[index],'.')
